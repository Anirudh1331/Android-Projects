<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="6">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:id="@+id/tv"
    android:textSize="60dp"
    android:text="0"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4"
        android:weightSum="6"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="20dp"
                android:id="@+id/b1"
                android:layout_width="wrap_content" />
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="8"
                android:textSize="20dp"
                android:id="@+id/b2"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="20dp"
                android:id="@+id/b3"/>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="20dp"
                android:id="@+id/b4"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/b5">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/b6"/>
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:id="@+id/b7"/>
        <Button
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="-"
            android:textSize="20dp"
            android:id="@+id/b8"/>
            >

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="20dp"
                android:id="@+id/b9"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="20dp"
                android:id="@+id/b10"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="20dp"
                android:id="@+id/b11"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="20dp"
                android:id="@+id/b12"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="20dp"
                android:id="@+id/b13"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="20dp"
                android:id="@+id/b14"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="%"
                android:textSize="20dp"
                android:id="@+id/b15"
                android:layout_width="wrap_content"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="20dp"
                android:id="@+id/b16"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="20dp"
                android:id="@+id/b17"/>
            <Button
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:id="@+id/b18"
                 android:text="BS"
                android:textSize="20dp"
                 android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/b19"
                android:text="ON/OFF"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/b20"
                android:text="="
                android:textSize="20dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="inv sin"
                android:textSize="20dp"
                android:id="@+id/b21"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/b22"
                android:text="inv cos"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/b23"
                android:text="inv tan"
                android:textSize="20dp"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/b24"
                android:text="!"
                android:textSize="20dp"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>